{
    "name": "skald/skald-php",
    "description": "Official PHP SDK for Skald API - Knowledge base management with semantic search, AI chat, and document generation",
    "version": "0.1.0",
    "type": "library",
    "keywords": ["skald", "knowledge-base", "semantic-search", "ai", "chat", "document-generation", "api-client"],
    "license": "MIT",
    "authors": [
        {
            "name": "Skald Labs, Inc.",
            "email": "support@useskald.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Skald\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Skald\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
